        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Lokasyon Cadde: </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="LokasyonCadde" value="@Model.lokasyonBilgi.LokasyonCadde" />
        </div>
    </div>
