<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OtelProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Otel_ProjeOdev.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @*<a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
*@
                            </li>
                        <li class="nav-item">
                            <a style="float:left;" class="nav-link text-dark" asp-area="" asp-page="/Otel/Index">Otel</a>
                            <a style="float:left;" class="nav-link text-dark" asp-area="" asp-page="/Politika/Index">Politika</a>
                            <a style="float:left;" class="nav-link text-dark" asp-area="" asp-page="/Yonetici/Index">Yönetici</a>
                            <a style="float:left;" class="nav-link text-dark" asp-area="" asp-page="/Lokasyon/Index">Lokasyon</a>
                            <a style="float:left;" class="nav-link text-dark" asp-area="" asp-page="/Tesis/Index">Tesis</a>
                            <a style="float:left;" class="nav-link text-dark" asp-area="" asp-page="/Oda/Index">Oda</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 VTYS - FİNAL <a asp-area=""></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>