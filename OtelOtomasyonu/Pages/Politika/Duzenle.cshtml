@page
@model Otel_ProjeOdev.Pages.Politika.DuzenleModel
@{
}
@using System.Data.SqlClient;

<br />
<h2>Politika Düzenle</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<form method="POST">
    <input type="hidden" name="PolitikaKod" value="@Model.politikaBilgi.PolitikaKod" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Politika Kayıt Zamanı: </label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="PolitikaKayitZamani" value="@Model.politikaBilgi.PolitikaKayitZamani" />
        </div>
    </div>
        <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Politika Ayrılma Zamanı: </label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="PolitikaAyrilmaZamani" value="@Model.politikaBilgi.PolitikaAyrilmaZamani" />
        </div>
    </div>
        <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Politika İptal Süresi: </label>
        <div class="col-sm-6">
            <select class="form-select" name="PolitikaIptalSuresi">
                <option selected value="@Model.politikaBilgi.PolitikaIptalSuresi">@Model.politikaBilgi.PolitikaIptalSuresi</option>

                @for (int i = 0; i < 15; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
        </div>
    </div>
    

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-danger" href="/Politika" role="button">Geri Dön</a>
        </div>
    </div>
</form>