@page
@model Otel_ProjeOdev.Pages.Politika.EkleModel
@{
    
}


<br />

<h2>Yeni Politika</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Politika Kayıt Zamanı: </label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="PolitikaKayitZamani" value="@Model.politikaBilgi.PolitikaKayitZamani" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Politika Ayrılma Zamanı: </label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="PolitikaAyrilmaZamani" value="@Model.politikaBilgi.PolitikaAyrilmaZamani" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Politika İptal Süresi: </label>
        <div class="col-sm-6">
            <select class="form-select" name="PolitikaIptalSuresi">
                <option value="">Bir seçim yapınız...</option>

                @for (int i = 0;i < 15; i++)
                {
                        <option value="@i">@i</option>
                }
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-danger" href="/Politika" role="button">Geri Dön</a>
        </div>
    </div>
</form>
