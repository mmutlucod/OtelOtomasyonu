@page
@model Otel_ProjeOdev.Pages.Tesis.EkleModel
@{
    
}


<br />

<h2>Yeni Tesis</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tesis Kodu: </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TesisKodu" value="@Model.tesisBilgi.TesisKodu" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tesis Spor Salonu: </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TesisSporSalonu" value="@Model.tesisBilgi.TesisSporSalonu" />
        </div>
    </div>
        <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tesis Restoran: </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TesisRestoran" value="@Model.tesisBilgi.TesisRestoran" />
        </div>
    </div>
        <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tesis Kafe: </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TesisKafe" value="@Model.tesisBilgi.TesisKafe" />
        </div>
    </div>


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-danger" href="/Tesis" role="button">Geri Dön</a>
        </div>
    </div>
</form>
